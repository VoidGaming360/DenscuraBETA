@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>
<html lang="en">

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SolisDensCuraBETA.web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Admin navigation tabs -->
                        
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Clinics" asp-action="Index">Clinic</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Rooms" asp-action="Index">Room</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Contact" asp-action="Index">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="AllDentists">DentistsList</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Supplies" asp-action="Index">Supplies</a>
                            </li>
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/AdminRegister">RegisterAdmin</a>
                            </li>
                       
                        <!-- Dentist navigation tabs -->
                        @if (User.IsInRole("Denscura_Dentist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Dentist" asp-controller="Dentist" asp-action="AddTiming">DentistTiming</a>
                            </li>
                        }

                        <!-- Patient navigation tabs -->
                        @if (User.IsInRole("Denscura_Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Patient</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/DentistRegister">RegisterDentist</a>
                        </li>
                        
                    </ul>

                    
                </div>
            </div>
        </nav>
    </header>
    

</body>
</html>
