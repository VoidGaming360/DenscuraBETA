@model IEnumerable<SolisDensCuraBETA.model.Appointment>

@{
    ViewData["Title"] = "Confirmed Appointments";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Number</th>
            <th>Type</th>
            <th>Created Time</th>
            <th>Reason For Visit</th>
            <th>Description</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Number</td>
                <td>@appointment.Type</td>
                <td>@appointment.RequestedTime</td>
                <td>@appointment.ReasonForVisit</td>
                <td>@appointment.Description</td>
                <td>@appointment.AppointmentDate?.ToShortDateString()</td>
                <td>@appointment.AppointmentStatus</td>
                <td>
                    <form asp-controller="ConfirmedAppointment" asp-action="Proceed" method="post">
                        <input type="hidden" name="appointmentId" value="@appointment.Id" />
                        <button type="submit" class="btn btn-primary">Proceed</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

