@using SolisDensCuraBETA.model
@model SolisDensCuraBETA.viewmodels.AppointmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Appointment</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" required />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Hidden field for RequestedTime with current datetime -->
                <input type="hidden" asp-for="RequestedTime" value="@DateTime.Now" />

                <!-- Display current datetime (optional) -->
                <label class="control-label">Created Time: @DateTime.Now</label>
            </div>
            <div class="form-group">
                <label asp-for="ReasonForVisit" class="control-label">Reason for Visit</label>
                <select asp-for="ReasonForVisit" class="form-control">
                    <option value="Dental Emergency/ Tooth Pain">Dental Emergency/ Tooth Pain</option>
                    <option value="Dental Hygeine/ Polishing">Dental Hygiene/ Polishing</option>
                    <option value="Dental Checkup">Dental Checkup</option>
                    <option value="Dental Extraction">Dental Extraction</option>
                </select>
                <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDentistId">Select Dentist:</label>
                <select asp-for="SelectedDentistId" class="form-control" asp-items="ViewBag.DentistList">
                    <option value="">-- Select Dentist --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentStatus" class="control-label"></label>
                <input asp-for="AppointmentStatus" class="form-control" type="hidden" value="pending" />
                <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
            </div>
            <div class="form-group" id="appointmentDateField" style="display:none;">
                <label asp-for="AppointmentDate" class="control-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

