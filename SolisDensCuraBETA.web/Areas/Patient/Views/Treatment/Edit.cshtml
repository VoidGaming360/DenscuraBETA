@model SolisDensCuraBETA.model.Treatment

<h1>Edit Treatment</h1>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="TreatmentPlan"></label>
        <textarea asp-for="TreatmentPlan" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Prescription"></label>
        <input asp-for="Prescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Costs"></label>
        <input asp-for="Costs" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
