@model SolisDensCuraBETA.viewmodels.TreatmentViewModel

@{
    ViewData["Title"] = "Create Treatment";
}

<h1>Create Treatment for Appointment @Model.AppointmentId</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="AppointmentId" />
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TreatmentPlan"></label>
        <textarea asp-for="TreatmentPlan" class="form-control"></textarea>
        <span asp-validation-for="TreatmentPlan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prescription"></label>
        <textarea asp-for="Prescription" class="form-control"></textarea>
        <span asp-validation-for="Prescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <textarea asp-for="Diagnosis" class="form-control"></textarea>
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Costs"></label>
        <input asp-for="Costs" class="form-control" />
        <span asp-validation-for="Costs" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Treatment</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
