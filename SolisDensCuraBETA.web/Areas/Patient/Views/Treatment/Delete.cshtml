@model SolisDensCuraBETA.model.Treatment

<h1>Confirm Delete</h1>

<div>
    <h4>Are you sure you want to delete this treatment?</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.Number</dd>
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
        <dt class="col-sm-2">Treatment Plan</dt>
        <dd class="col-sm-10">@Model.TreatmentPlan</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Prescription</dt>
        <dd class="col-sm-10">@Model.Prescription</dd>
        <dt class="col-sm-2">Diagnosis</dt>
        <dd class="col-sm-10">@Model.Diagnosis</dd>
        <dt class="col-sm-2">Costs</dt>
        <dd class="col-sm-10">@Model.Costs</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
