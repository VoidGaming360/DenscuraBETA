<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SolisDensCuraBETA.web.styles.css" asp-append-version="true" />
  


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - SolisDensCuraBETA.web</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700" rel="stylesheet">

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SolisDensCuraBETA.web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                      
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="AllDentists">DentistsList</a>
                            </li>
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/DentistRegister">RegisterDentist</a>
                            </li>
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/AdminRegister">RegisterAdmin</a>
                            </li>
                        }

                        
                        @if (User.IsInRole("Dentist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Dentist" asp-controller="DentistHome" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Dentist" asp-controller="Dentist" asp-action="AddTiming">DentistTiming</a>
                            </li>

                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/DentistRegister">RegisterDentist</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Appointment" asp-action="ViewAppointments">View Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="ConfirmedAppointment" asp-action="Index">Appointment Followups</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Treatment" asp-action="Index">TreatmentPlannings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Chat" asp-action="Index">Chat</a>
                            </li>
                        }

                        
                        @if (User.IsInRole("Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Appointment" asp-action="Create">New Appointment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Appointment" asp-action="Index">My Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Patient" asp-controller="Chat" asp-action="Index">Chat</a>
                            </li>
                        }
                        
                        
                    </ul>

                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SolisDensCuraBETA.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Get reference to bell icon
        const bellIcon = document.getElementById('notificationsLink');

        // Get reference to notification box
        const notificationBox = document.querySelector('.dropdown-menu');

        // Toggle visibility of notification box when bell icon is clicked
        bellIcon.addEventListener('click', () => {
            // Toggle the 'show' class to display/hide the notification box
            notificationBox.classList.toggle('show');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/jquery.timepicker.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="~/js/google-map.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
